.container{
    padding-bottom:100rpx;
}
.menu{
    padding:20rpx 0;
    color:#fff;
}
.menu.active{
    background: #fff;
    font-weight: bolder;
    color:#50d1fe;
}
.gift-item{
  width: 100%;
  background: #fff;
  border:1rpx solid #e8e8e8;
  padding: 10rpx;
  margin-bottom: 20rpx;
}
.gift-item > image{
  width:300rpx;
  height: 300rpx;
  padding: 20rpx;
}
.gift-item .info{
  padding: 15rpx;
  height: 300rpx;
  }
.skuimg{
    width:100rpx;
    height: 100rpx;
    background: #ccc;
}
.skuimg image{
    width:100%;
    height: 100%;
}
.sku{
    width:90%;
    margin: 0 auto;
}
.opt{
    width:100rpx;
    height: 60rpx;
    background: #f00;
}
.skuinfo{
    width:530rpx;
    font-size:12px;
}
.skuinfo text{
    margin: 0;
    padding: 0;
    margin-right:10rpx;
}
