.container{
    min-height: 1000rpx;
    justify-content:flex-start;
    padding-top:88rpx; 
}
.search {
    padding: 10rpx 20rpx;
    position: fixed;
    top:0;
    height: 88rpx;
    background: #fff;
    z-index: 999;
}

.searchbox {
    background: #f2f2f2;
    color: #000;
    padding: 0rpx 10rpx;
    height: 68rpx;
    line-height: 68rpx;
    width: 600rpx;
    border-radius: 10rpx;
}

.searchimg {
    width: 108rpx;
    height: 68rpx;
}
.history,.hot,.products{
    width:100%;
}
.search-item{
    background: #f2f2f2;
    padding: 10rpx 20rpx;
    border-radius: 6rpx;
    margin: 10rpx;
}
.products{
    padding-top:98rpx;
}
.info{
    background: #fff;
    padding:10rpx;
    height: 220rpx;
    width:490rpx;

}
.info text{
    padding: 5rpx 10rpx;
    font-size:12px;
}

.exchange{
    background: red;
    color:#fff;
    padding:3rpx 6rpx;
}
.short{
    position: fixed;
    top:88rpx;
    margin-bottom: 20rpx;
    z-index: 999;
}
@import "/template/groupbuyitem/groupbuy.wxss";