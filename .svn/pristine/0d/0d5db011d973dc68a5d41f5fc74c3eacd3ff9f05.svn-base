.navmenu {
    background: #f6f6f6;
    font-size: 14px;
    color: #666;
    border-top: 1px solid #ddd;
    padding: 10rpx 0;
}

.navmenu > view {
    width: 33.33%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

navigator {
    border: 1rpx solid #337ab7;
    color: #337ab7;
    padding: 5rpx 15rpx;
}


button[type=default], button[type=default][plain] {
    color: #666;
    font-weight: normal;
    background-color: #f6f6f6;
    border-left: 0rpx solid #efefef;
    border-top: 0rpx solid #efefef;
    border-right: 0rpx solid #efefef;
    border-bottom: 0rpx solid #efefef;
    border-radius: 0;
    padding: 10rpx 20rpx;
    font-size:14px;
}
.container{
    padding-bottom:120rpx;
}
.comm_box{
    position: fixed;
    bottom:0;
    left:0;
    width:100%;
    height: 100%;
    z-index: 10000;
}
.comm_box.hide{
    height: 0%;
}
.comm_box .comm_bg{
    position: relative;
    width:100%;
    height: 100%;
    background: rgba(0,0,0,.8);
    opacity: 0.8;
    transition: all .8s linear;
}
.comm_box .comm_bg.hide{
    opacity: 0.0;
}
.comm_box .input_box{
    position: absolute;
    bottom:0;
    left:0;
    right:0;
    background: #f0f0f0;
    height: auto;
    padding: 10rpx;
    z-index: 10100;
    transition: all .3s linear;
    overflow: hidden;
}
.comm_box .input_box.hide{
        height: 0rpx;
}
.input_comment{
    border:1rpx solid #ddd;
    border-radius: 10rpx;
    padding: 10rpx;
    width:600rpx;
    height: 180rpx;
}
.submitComm{
    width:130rpx;
    height: 180rpx;
    display: flex;
    flex-flow:column-reverse;
}
.submitComm image{
    width:80rpx;
    height: 80rpx;
}
@import "/template/commentitem/commentitem.wxss";
@import "/template/sharebox/sharebox.wxss";