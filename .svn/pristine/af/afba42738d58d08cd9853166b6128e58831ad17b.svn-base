.merchants-item >view> image{
  width:100%;
  height: 250rpx;
}
.item-opt-list navigator{
    box-shadow: 0 3px 1px -2px rgba(0,0,0,.2),0 2px 2px 0 rgba(0,0,0,.14),0 1px 5px 0 rgba(0,0,0,.12);
    position: relative;
}
.item-opt-list navigator.point::after{
    content: "";
    position:absolute;
    top:-5rpx;
    right:-5rpx;
    width:30rpx;
    height: 30rpx;
    background: red;
    border-radius: 50%;
}
.row{
    width:100%;
    background: #fff;
    display: flex;
    flex-direction: row;
    flex-wrap:wrap;
    align-items:flex-start;
    align-content:space-around;
    padding: 0;
}
.row > navigator,.row > view{
    display: flex;
    justify-content: center;
    align-items: center;
    width:30%;
    margin: 5rpx 1.5%;
    height: 80rpx;
    box-sizing: border-box;
}
text.owner{
    color:#f00;
    padding: 0rpx 10rpx;
}
text.mgr{
    color:#00b642;
    padding: 0rpx 10rpx;
}
.jiaose{
    position: absolute;
    left:0;
    bottom:0;
    right:0;
    color:#fff;
}
.imp{
    background: linear-gradient(to right, #50d1fe,#fff);
    color:#000;
}