.storeitem{
    border-radius: 5rpx;
    background: #fff;
    padding: 20rpx 5rpx;
    box-sizing: border-box;
    margin-top: 20rpx;
}
.storeitem .big-p{
    overflow: hidden;
    padding:0;
}
.storeitem .newTop{
    width:460rpx;
    height: 480rpx;
}
.storeitem .hotTop{
    width:240rpx;
    height: 480rpx;
}
.storeitem .small-p{
    width:100%;
    padding: 0rpx;
    position: relative;
}
.storeitem .small-p image,.smallad{
    width:220rpx;
    height: 220rpx;
    background: #eee;
}
.storeitem .midd-p{
    height: 460rpx;
    width:100%;
}
.storeitem .midd-p image{
    height: 460rpx;
    width:460rpx;  
}
.storeitem .gzhu{
    width:110rpx;
    color:#d9534f;
    background: #fff;
    padding: 8rpx;
    font-size:12px;
    display: flex;
    justify-content: center;
    align-items: center;
    border:1rpx solid #d9534f;
}
.storeitem .gzhu.attention{
        color:#545454;
        background: #eee;
        border:1rpx solid #eee;
}
