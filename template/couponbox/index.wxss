.coupon_box {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 40000;
}

.coupon_box.hide {
  height: 0%;
}

.coupon_box .share_bg {
  position: relative;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  opacity: 0.8;
  transition: all 0.8s linear;
}

.coupon_box .share_bg.hide {
  opacity: 0.0;
}

.coupon_box .input_box {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #f0f0f0;
  height: auto;
  z-index: 10100;
  transition: all 0.3s linear;
  overflow: hidden;
}

.syview {
  width: 750rpx;
  background: #f2f2f2;
  box-sizing: border-box;
  padding: 10rpx;
}

.coupon_box .input_box.hide {
  height: 0rpx;
}

.btn-add {
  height: 48rpx;
  font-size: 12px;
  width: 112rpx;
  border-radius: 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 6rpx;
}

.btn-add.btn-red {
  color: #d81e06;
  border: 1px solid #d81e06;
}

.btn-add.btn-green {
  border: 1px solid #00b642;
  color: #00b642;
}

.btn-add.btn-orange {
  color: #fa541c;
  border: 1px solid #fa541c;
}

.btn-add.btn-blue {
  color: #1296db;
  border: 1px solid #1296db;
}

.coupon-item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding: 10rpx 0;
  padding-left: 10rpx;
  border-radius: 5px;
  margin-bottom: 24rpx;
  box-sizing: border-box;
	background: #fff;
}

.coupon-img {
  width: 108rpx;
  height: 128rpx;
}

.coupon-img image {
  width: 96rpx;
  height: 96rpx;
}

.coupon-content {
  position: relative;
	min-height:128rpx; 
  width: 450rpx;
  padding: 10rpx 20rpx;
  border-right: 1rpx dashed lightgray;
}

.coupon-content::before {
  content: '';
  width: 24rpx;
  height: 24rpx;
  border-radius: 12rpx;
  background: #f2f2f2;
  position: absolute;
  top: -22rpx;
  right: -12rpx;
}

.coupon-content::after {
  content: '';
  width: 24rpx;
  height: 24rpx;
  border-radius: 12rpx;
  background: #f2f2f2;
  position: absolute;
  bottom: -22rpx;
  right: -12rpx;
}

.coupon-opt {
	background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: cetner;
  align-items: center;
  width: 152rpx;
  height: 128rpx;
}
