
.coupon {
  padding: 10rpx;
  border: 1px dashed #ddd;
  background: #fff;
  border-radius: 12rpx;
  width: 32%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.coupon image {
  width: 96rpx;
  height: 96rpx;
}

.coupon .title {
  color: #251b1c;
  font-size: 14px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.coupon .eg {
  color: #666;
  font-size: 11px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn-add {
  height: 48rpx;
  font-size: 12px;
  width: 112rpx;
  border-radius: 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
	margin: 6rpx;
}
.btn-add.btn-red {
  color: #d81e06;
	border:1px solid #d81e06;
}
.btn-add.btn-green {
  border:1px solid #00b642;
	color:#00b642;
}

.btn-add.btn-orange {
  color: #fa541c;
	border:1px solid #fa541c;
}

.btn-add.btn-blue {
  color: #1296db;
	border:1px solid #1296db;
}

.coupon-item{
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items: center;
	padding: 10rpx;
	padding-right:0;
	border-radius: 5px;
	position: relative;
	margin-bottom: 24rpx;
}
.coupon-item::before{
	content:'';
	width:24rpx;
	height: 24rpx;
	border-radius:12rpx;
	background: #f2f2f2;
	position: absolute;
	top:-12rpx;
	right:132rpx;
}
.coupon-item::after{
	content:'';
	width:24rpx;
	height: 24rpx;
	border-radius:12rpx;
	background: #f2f2f2;
	position: absolute;
	bottom:-12rpx;
	right:132rpx;
}
.coupon-img{
	width:108rpx;
	height: 128rpx;
}
.coupon-img image{
	width:96rpx;
	height: 96rpx;
}
.coupon-content{
	width:450rpx;
	padding: 10rpx 20rpx;
	border-right:1rpx dashed lightgray;
}
.coupon-opt{
	width:142rpx;
	height: 128rpx;
	color:#d81e06;
}
.coupon-opt.over{
	width:142rpx;
	height: 128rpx;
	color:#666;
}
.add-coupon-bag{
	width:100%;
  border: 1px dashed #d81e06;
	border-radius: 6rpx;
	display: flex;
	justify-content: center;
	align-items:center;
	color:#d81e06;
	font-size:14px;
	padding:12rpx;
}

