.tuanzhang{
    position: relative;
    width:96rpx;
    height: 96rpx;
    border:1rpx solid #f62004;
    border-radius: 50%;
}
.tuanyuan{
    position: relative;
    width:96rpx;
    height: 96rpx;
    border:1rpx solid #50d1fe;
    border-radius: 50%;
}
.tuanyuan.wait{
    border-color:#777;
    border-style:dashed;
}
.tuanzhang image,.tuanyuan image{
    width:100%;
    height: 100%;
}
.tuanzhang::before{
    content: '团长';
    position: absolute;
    top:-12rpx;
    left:12rpx;
    width:64rpx;
    height: 32rpx;
    font-size:11px;
    background: #f62004;
    color:#fff;
    border-radius: 24rpx;
    text-align: center;
}
