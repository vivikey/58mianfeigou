.btn.remove{
    background: #f00;
}
.shop_box,.chose_gift_box{
    position: fixed;
    background: rgba(0,0,0,0.7);
    top:0;
    right:0;
    width:100%;
    height: 100%;
    z-index: 100;
    transition: all .3s linear;
}
.shop_box.hide{
    width:0%;
}
.chose_gift_box.hide{
    top: 100%;
}
.shop_list{
    width:80%;
    background: #fff;
    border:1px solid #ccc;
    height: 100%;
    overflow-y: scroll;
    position: relative;
    overflow-x: hidden;
}
.comfire{
    position: absolute;
    bottom:0;
    left:0;
    right:0;
    padding: 20rpx 0;
}
.addbtnimg.rev{
    transform: rotateZ(90deg)
}