.shop_box,.chose_gift_box{
    position: fixed;
    background: rgba(0,0,0,0.7);
    top:0;
    right:0;
    width:100%;
    height: 100%;
    z-index: 10000;
    transition: all .3s linear;
}
.shop_box.hide{
    width:0%;
}
.chose_gift_box.hide{
    top: 100%;
}
.shop_list{
    width:80%;
    background: #fff;
    border:1px solid #ccc;
    height: 100%;
    overflow-y: scroll;
    position: relative;
    overflow-x: hidden;
}
.comfire{
    position: absolute;
    bottom:0;
    left:0;
    right:0;
    padding: 20rpx 0;
}
.addbtnimg.rev{
    transform: rotateZ(90deg)
}
.textinput input{
    direction: flex;
    flex-direction: row;
    align-items: center;
    padding: 0;
}
.amc_item{
    width:33.33%;
    padding: 0rpx 10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.amc_item input,.digit{
    background: #f0f0f0;
    color:gray;
    text-align: center;
}
.small-panel input{
    height: 80rpx;
    padding:10rpx;
    background: #f0f0f0;
    color:#337ab7;
    
} 
