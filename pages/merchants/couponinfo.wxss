@import "/template/form.wxss";

.btn.remove {
  background: #f00;
}

.specs-input {
  width: 650rpx;
  margin-left: 100rpx;
  padding: 5rpx 10rpx;
}

button {
  margin: 0;
  width: 100%;
}

.img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 1rpx solid #ccc;
  overflow: hidden;
}

.img image {
  width: 100%;
  height: 100%;
}

.opt {
  width: 100rpx;
  height: 60rpx;
  background: #f00;
}

.spec-li text {
  color: lightgoldenrodyellow;
  font-weight: bolder;
}

.coupon {
  padding: 10rpx;
  border: 1px dashed #ddd;
  background: #fff;
  border-radius: 12rpx;
  width: 32%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.coupon.active {
  border: 1px solid #f00;
}

.coupon image {
  width: 96rpx;
  height: 96rpx;
}

.coupon .title {
  color: #251b1c;
  font-size: 14px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.coupon .eg {
  color: #666;
  font-size: 11px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.row-input-box {
  padding: 6rpx 0;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 650rpx;
}

.row-input-box text {
  font-size: 12px;
	display: flex;
  justify-content: flex-start;
  align-items: center;
}

picker .caption {
  font-size: 10px;
  border: 1rpx solid #ccc;
  background: #eee;
  color: #515151;
  height: 48rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
	padding:0 6rpx;
}

.row-input-box input {
  width: 300rpx;
  height: 48rpx;
  font-size: 14px;
  border: 1rpx solid #ccc;
  background: #eee;
  color: #515151;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
