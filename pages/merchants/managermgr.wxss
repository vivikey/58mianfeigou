.scanimg{
    width:48px;
    height: 48px;
}
.enterimg{
    width:128rpx;
    height: 128rpx;
}
view.scanimg image{
    width:100%;
    height: 100%;
}
.menu{
    padding:20rpx 0;
    color:#fff;
}
.menu.active{
    background: #fff;
    font-weight: bolder;
    color:#50d1fe;
}
.tixianbtn{
    width:45%;
    color:#fff;
    padding: 15rpx;
    text-align: center;
    box-shadow: 0 3px 1px -2px rgba(0,0,0,.2),0 2px 2px 0 rgba(0,0,0,.14),0 1px 5px 0 rgba(0,0,0,.12);
    border-radius: 30rpx;
}
.tixian-box{
    position: fixed;
    background: rgba(0,0,0,0.7);
    bottom:0;
    right:0;
    width:100%;
    height: 100%;
    z-index: 100;
    transition: all .3s linear;
    overflow: hidden;
}
.tixian-box.hide{
    height: 0;
}
.tixian-box .ipt-box{
    background: #fff;
    border:1px solid #ccc;
    border-radius: 10rpx;
    width:80%;
    padding:30rpx;
}