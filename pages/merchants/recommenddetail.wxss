@import "/template/form.wxss";
.info-item-row text.radio-cap{
	padding-left:6rpx;
	padding-right:0rpx;
	font-weight: 600;
}
picker{
	width:50%;
}
picker.shop-choser{
	width:100rpx;
}
.top-menu {
	height: 46px;
  background: #d81e06;
  color: #fff;
}
.top-menu .top-menu-kk{
	border:1rpx solid #fff;
	border-radius: 64rpx;
}
.top-menu-item {
  width: 300rpx;
  font-size: 14px;
  height: 64rpx;
  display: flex;
  justify-content: center;
	align-items: center;
	border-radius: 64rpx;
	transition: all .3s linear;
}

.top-menu-item.active {
  background: #fff;
  color: #d81e06;
	font-weight: bolder;
}

.input-row-line{
	width:100%;
	background: #fee;
	border:1px solid #ddd;
	border-radius: 5px;
	margin-bottom: 12rpx;
	padding: 2px 3px;
}
.info-item-row input.short{
 width:240rpx;
 text-align: center;
 font-size:12px;
 border:1px solid #f99;
 border-radius: 3px;
}
.info-item-row input.double,.row-input-box{
 width:480rpx;
 text-align: center;
 font-size:12px;
 border:1px solid #f99;
 border-radius: 3px;
 background: #fff;
}
.row-input-box text {
  font-size: 12px;
	display: flex;
  justify-content: flex-start;
  align-items: center;
}
.yusell {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  transition: all 0.2s linear;
  z-index: 66666;
  overflow: hidden;
		font-size:12px;
}

.yusell.hide {
  height: 0;
}
.yusell .content-box{
	width:100%;
	background: #fff;
	overflow: hidden;
	border-radius: 18rpx;

}
.yusell .content-txt{
	min-height: 750rpx;
	max-height: 95vh;
	width:100%;
}
.row-input-box picker .caption {
  font-size: 10px;
  border: 1rpx solid #eee;
  background: #f0f0f0;
  height: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
	padding:0 6rpx;
}