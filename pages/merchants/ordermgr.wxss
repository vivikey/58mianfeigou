.modifyWnd{
    position: fixed;
    bottom:0;
    left:0;
    width:100%;
    height: 100%;
    z-index: 40000;
}
.modifyWnd.hide{
    height: 0%;
}
.modifyWnd .share_bg{
    position: relative;
    width:100%;
    height: 100%;
    background: rgba(0,0,0,.8);
    opacity: 0.8;
    transition: all .8s linear;
}
.modifyWnd .share_bg.hide{
    opacity: 0.0;
}
.modifyWnd .input_box{
    position: absolute;
    top:0;
    left:0;
    right:0;
    background: #f0f0f0;
    height: auto;
    z-index: 10100;
    transition: all .3s linear;
    overflow: hidden;
}
.modifyWnd .input_box input{
	height: 60rpx;
	display: flex;
	justify-content: flex-start;
	align-items: center;
	padding: 0 15rpx;
}
.modifyWnd .input_box.hide{
        height: 0rpx;
}
.modifyWnd .opt image{
    width:81rpx;
    height: 81rpx;
}