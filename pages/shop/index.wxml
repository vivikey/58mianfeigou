    <view class='sq'></view>
    <view class='box'>
      <view class='title'>
        <text class='didi bgviolet mix'></text>
        <text class='didi bgviolet half'></text>
        <text class='didi bgviolet'></text>
        <text class='pdr violet'>活动海报</text>
        <text class='didi bgviolet'></text>
        <text class='didi bgviolet half'></text>
        <text class='didi bgviolet mix'></text>
        <view class='tomore' bindtap='toPosterIndex'>
          <image src='/resource/icon/more.png' class='img-sm'></image>
        </view>
      </view>
      <scroll-view class="scroll-view_H" scroll-x>
        <view class='scroll-view-poster' wx:for='{{posterHotList}}' wx:key='id'>
          <!-- 海报图片 -->
          <view class='img'>
            <image src='{{item.poster_imgs}}'></image>
          </view>
          <!-- 海报标题 -->
          <view class='poster-title pdr'>
            <view class='txtpt pd full-width'>{{item.poster_name}}</view>
          </view>
          <!-- 商铺名称 -->
          <!-- <view class='poster-store-name'>MicrosoftChina</view> -->
        </view>
      </scroll-view>
    </view>

    <view class='sq'></view>
    <view class='box pd'>
      <view class='flex-row'>
        <view class='title full-width'>
          <text class='didi bgorange mix'></text>
          <text class='didi bgorange half'></text>
          <text class='didi bgorange'></text>
          <text class='pdr or'>热门拼团</text>
          <text class='didi bgorange'></text>
          <text class='didi bgorange half'></text>
          <text class='didi bgorange mix'></text>
          <view class='tomore'>
            <image src='/resource/icon/more.png' class='img-sm'></image>
          </view>
        </view>
      </view>
      <view wx:for='{{groupHotList}}' wx:key='id' class='full-width pd flex-row'>
        <view class='store_shop_specimg' data-goodsid='{{item.id}}' data-specid='{{item.spec.id}}'>
          <image src='{{item.goods_spec[0].spec_img}}'></image>
        </view>
        <view class='store_shop_info bottomline pdc'>
          <view>
            <view class='black font-sm txtclamp txtclamp-2'>{{item.goods_name}}
              <text class='label white-label small'>{{item.goods_spec[0].spec_size}}</text>
              <text class='label white-label small'>{{item.goods_spec[0].spec_color}}</text>
            </view>
            <view class='pdc'>
              <text class='label small'>{{item.goods_key}}</text>
            </view>
          </view>
          <view class='font-sm flex'>
            <view class='redcolor font-md bolder'>
              <text class='font-md'>{{item.goods_spec[0].group_price}}</text>
            </view>
            <view class='cgray txtmidline font-xs'>¥{{item.goods_spec[0].spec_price}}</view>
          </view>
          <view class='flex-row'>
            <view>
              <text class='label small red-label'>{{item.group_num}}人团</text>
							<text class='label small'>{{item.sale_num}}已团</text>
            </view>
            <view class='flex flex-center bdlinearskr wtcolor pdc pdr20 radius-m' bindtap='onShopClick' data-id='{{item.id}}' data-spec='{{item.goods_spec[0].id}}'>
              <text>我要参团</text>
            </view>
          </view>
        </view>
      </view>
    </view>
    <view class='sq'></view>
    <view class='box pd'>
      <view class='title'>
        <text class='didi bgpk mix'></text>
        <text class='didi bgpk half'></text>
        <text class='didi bgpk'></text>
        <text class='pdr pkcolor'>推荐商品</text>
        <text class='didi bgpk'></text>
        <text class='didi bgpk half'></text>
        <text class='didi bgpk mix'></text>
      </view>
      <view class='full-witdh flex flex-wrap'>
        <view class='tuijian-item' wx:for='{{shop_list}}' wx:key='' bindtap='onShopClick' data-id='{{item.id}}' data-spec='{{item.goods_spec[0].id}}'>
          <view class='content'>
            <view class='img flex flex-center'>
              <image src='{{item.goods_spec[0].spec_img}}'></image>
            </view>
            <view class='info'>
              <view class='shop-name full-width black font-sm txtclamp txtclamp-2'>
                {{item.goods_name}} {{item.goods_spec[0].spec_size}} {{item.goods_spec[0].spec_color}}
              </view>
              <view class='flex-row'>
                <view class='pkcolor font-md pdc'>
                  <text class='font-x'>￥</text>
                  <text class='bolder'>{{item.goods_spec[0].spec_price}}</text>
                </view>
                <view class='cgray font-x'>
                  <text class='black'>{{item.sale_num}}</text>已售
                </view>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>

  </view>
  <view wx:if='{{classNavActIdx>0}}' style='padding-top:70rpx;'>
    <view class='full-width bglightgray'>
      <view class='full-witdh flex flex-wrap'>
        <view class='tuijian-item' wx:for='{{shop_list}}' wx:key='' bindtap='onShopClick' data-id='{{item.id}}' data-spec='{{item.goods_spec[0].id}}'>
          <view class='content'>
            <view class='img flex flex-center'>
              <image src='{{item.goods_spec[0].spec_img}}'></image>
            </view>
            <view class='info'>
              <view class='shop-name full-width black font-sm txtclamp txtclamp-2'>
                {{item.goods_name}} {{item.goods_spec[0].spec_size}} {{item.goods_spec[0].spec_color}}
              </view>
              <view class='flex-row'>
                <view class='pkcolor font-md pdc'>
                  <text class='font-x'>￥</text>
                  <text class='bolder'>{{item.goods_spec[0].spec_price}}</text>
                </view>
                <view class='cgray font-x'>
                  <text class='black'>{{item.sale_num}}</text>已售
                </view>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
  <import src="/template/version/version.wxml" />
  <template is="version" data="{{version}}"></template>
</view>