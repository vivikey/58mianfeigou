@import "/template/mainbar.wxss";
@import "/template/mainnavbox/mainnavbox.wxss";
swiper.tj{
    width:750rpx;
    height: 420rpx;
}
swiper.dynamic{
    height:49rpx;
}
.bg-gray{
    background: #ccc;
}
swiper image{
    width:100%;
    height: 100%;
}
.more{
    position: relative;
    padding-right: 36rpx;
}
.moreimg{
    position: absolute;
    right: 0;
    top:0;
  width:36rpx;
  height: 36rpx;
}
.foritem{
    margin-top:15rpx;
    padding: 0 15rpx;
    width:33.33%;
}
.foritem text{
    width:100%;
}
.imgblock{
    width:100%;
    height: 220rpx;
    margin-bottom:20rpx;
    border-radius: 5rpx;
    overflow: hidden;
}
.pd-t30{
    padding-top:30rpx;
}
.col-12{
    min-height: 20rpx;
}
.foryou{
    background: #fff;
}
.products{
    background: #fff;
    width:100%;
}
.products .item{
    display: inline-flex;
    box-sizing: border-box;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.products .item .block{
    height: 360rpx;
    width:360rpx;
    background: #fff;
}
.info{
    padding: 15rpx;
}

.item:nth-child(2n+1){
    border-right:1rpx solid #eee;
}
.exchange{
    background: red;
    color:#fff;
    padding:3rpx 6rpx;
}
