.topnav{
    box-shadow: 0 3px 1px -2px #666,0 2px 2px 0  #666,0 1px 5px 0  #666;
}
swiper{
    width:750rpx;
    height: 750rpx;
}
swiper .swiper-navbox,swiper swiper-item image{
    width:100%;
    height: 100%;
}
.price-box{
    display: flex;
    justify-content:flex-start;
    align-items:baseline;
    color:#f8f8f8;
}
.sc{
    border-left:1rpx solid #ddd;
    width:120rpx;
    font-size:10px;
}
.goods-name{
    width:600rpx;
    font-size:16px;
}
.optmenu{
	display: flex;
	flex-direction: row;
	justify-content:flex-start;
	align-items: center;
	background: #fff;
	border-top:1rpx solid #ccc;
}
.optmenu .mitem1,.optmenu .mitem2,.optmenu .mitem3{
	width:40%;
	margin: 0;
	height: 100rpx;
	padding: 5rpx 0;
}
.optmenu .mitem2{
	width:30%;
}
.optmenu .mitem3{
	width:60%;
}
.container{
	padding-bottom:100rpx;
}
