.details{
    position: relative;
}
.over-sel{
    position: absolute;
    top:720rpx;
    left:400rpx;
    width:200rpx;
    height: 200rpx;
    z-index: 12000;
}
.playbtn{
    position: absolute;
    width:100rpx;
    height: 100rpx;
    z-index: 100;
    top:325rpx;
    left:325rpx;
    border-radius: 50%;
    background-color: rgba(0,0,0,.4);
}
.playbtn .play-icon{
    margin-left:10rpx;
    border-top:26rpx solid transparent;
    border-left:36rpx solid #fff;
    border-bottom:22rpx solid transparent;
}
.video-play{
    width:750rpx;
    height: 650rpx;
    transition: all .1s linear;
    position: absolute;
    left:0;
    top:0;
}
.video-play.hiden{
    height: 0rpx;
    width:0rpx;
}
.hiden-video{
    position: absolute;
    width:100rpx;
    height: 50rpx;
    z-index: 860;
    left:325rpx;
    bottom:40rpx;
    color:#fff;
    background-color: rgba(0,0,0,.6);
    border-radius: 10rpx;
}
.img-list{
    padding: 0;
    margin: 0;
    height: auto;
    width:750rpx;
}
.img-item{
    width:750rpx;
    height: 100%;
    padding: 0;
    margin: 0;
}
.howgetjf{
    background: rgba(0,0,0,.7);
    font-size:13px;
    color:#fff;
    bottom:100rpx;
    border-radius: 10rpx;
    transition: all .3s linear;
}
.howgetjf .title::after{
    position: absolute;
    content:"";
    width:0rpx;
    height: 0rpx;
    right:20rpx;
    bottom:-20rpx; 
    transform: rotateZ(45deg);
    border-right:10rpx solid rgba(0,0,0,.6);
    border-bottom:10rpx solid rgba(0,0,0,.6);
    border-left:10rpx solid transparent;
    border-top:10rpx solid transparent;
}