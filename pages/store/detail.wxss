.store-info{
    width:430rpx;
    display: flex;
    flex-direction: column;
    justify-content:space-between;
    align-items: flex-start;
    height: 200rpx;
}
.store-logo{
    overflow: hidden;
    width:280rpx;
    height: 200rpx;
}
.store-logo image{
    width:100%;
    height: 100%;
}

swiper.dynamic{
    height:49rpx;
}
.store_shop_specimg{
    width:260rpx;
    height: 260rpx;
    background: #f9f9f9;
}
.store_shop_specimg image{
    width:100%;
    height: 100%;
}
.store_shop_info{
    width:430rpx;
    height: 260rpx;
    padding:0 10rpx;
    padding-bottom:10rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-start;
}
.container{
	padding-bottom:100rpx;
}
.store-cart{
	z-index: 1800;
}
.store-cart.full{
	background: rgba(0,0,0,0.4);
	top:0;
	display: flex;
	flex-direction: column;
	justify-content: flex-end;
}
.store-cart .shop-list .itemList{
	max-height: 200px;
	width:100%;
	overflow-y:scroll;
}
.store-cart .shop-list .items .title{
	width:400rpx;
}
.store-cart .opt-bar{
	height: 100rpx;
	background: rgba(33,33,33,.9);
	color:#fff;
}
.store-cart .opt-bar .cart-box{
	background: #00b642;
	width:80rpx;
	height: 80rpx;
	border:3px solid rgba(33,33,33,.9);
	border-radius: 80rpx;
	transform:translate(15px,-15px);
}
.store-cart .opt-bar .cart-box.bgw{
		background: #fff;
}
.store-cart .opt-bar .cart-box.empty{
		background: #383838;
}
.store-cart .opt-bar .go{
	height: 100rpx;
	width:180rpx;
}
.sortbox{
	display: flex;
	justify-content: space-around;
	align-items: center;
	padding-top: 20rpx;
}
@import "/template/sharebox/sharebox.wxss";