.top-menu {
	width:100%;
  background: #d81e06;
  color: #fff;
}
.top-menu .top-menu-kk{
	border:1rpx solid #f2f2f2;
	border-radius: 64rpx;
	width:60%;
}
.top-menu-item {
  width: 50%;
  font-size: 12px;
  height: 64rpx;
  display: flex;
  justify-content: center;
	align-items: center;
	border-radius: 64rpx;
	transition: all .3s linear;
}

.top-menu-item.active {
  background: #fff;
  color: #e97f23;
}

.tuijian-item{
  width:50%;
  background: #fff;
  padding: 0rpx;
	border:6rpx solid #f2f2f2;
	border-radius: 0rpx;
}
.tuijian-item .img{
  width:100%;
	border-radius:12rpx;
}
.tuijian-item .img image{
	width:100%;
  height: 300rpx;
}
.btn-uploadimg{
	font-size: 12px;
  height: 64rpx;
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;
	border-radius: 32rpx;
	background: #fff;	
	padding: 1px 6px;
	color:#00b642;
	border:1px solid #00b642;
}
.btn-uploadimg image{
	height: 56rpx;
	width:56rpx;
	transform: rotateZ(180deg)
}