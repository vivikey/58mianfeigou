.big-top {
  background: #d81e06;
	height: 69px;
  width: 100%;
  color: #fff;
  font-size: 28px;
}

.top-menu {
	width:100%;
	height: 46px;
  background: #d81e06;
  color: #fff;
	padding: 0 50rpx;
}
.top-menu .top-menu-kk{
	border:1px solid #f2f2f2;
	border-radius: 64rpx;

}
.top-menu-item {
  width: 50%;
  font-size: 12px;
  height: 64rpx;
  display: flex;
  justify-content: center;
	align-items: center;
	border-radius: 64rpx;
	transition: all .3s linear;
}

.top-menu-item.active {
  background: #fff;
  color: #e97f23;
}

.scroll-view_H{
    display: flex;
		justify-content: flex-start;
		align-items: center;
    white-space: nowrap; 
    background: #fff;
    width:100%;
		height: 340rpx;
    transition: all .3s linear;
		padding: 10rpx 0;
}
.scroll-view-item_H {
  display: inline-flex;
  color: #2c2c2c;
  font-weight: 500;
  font-size: 12px;
  margin-right:20rpx;
	height: 320rpx;
  align-items: center;
}
.label{
	padding:12rpx;
}
.offline-item{
	width:32px;
	height: 32px;
	position: relative;
	margin:10rpx;
}
.offline-item image{
	width:100%;
	height: 100%;
}
.scroll-view-item_H image{
	width:200rpx;
	height: 320rpx;
}
.store_name{
	max-width:400rpx;
	color:#555;
}
.nick_name{
	position: absolute;
	bottom:0;
	left:0;
	right:0;
	background: rgba(0, 0, 0, 0.8);
	color:#fff;
	font-size:9px;
}
.recom_name{
	max-width:300rpx;
  color: #333;
	font-weight: 600;
	font-size:12px;
	padding: 0 6rpx;
	border-bottom: 2px solid #e97f23;
}